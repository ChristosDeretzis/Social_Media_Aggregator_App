<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/NumberID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="1."
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/hashtagTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="#champions_League"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/NumberID"
        app:layout_constraintStart_toEndOf="@+id/NumberID"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/NumberOfTweetsTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="0 tweets"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/hashtagTxt"
        app:layout_constraintTop_toBottomOf="@+id/hashtagTxt" />
</androidx.constraintlayout.widget.ConstraintLayout>